@using Web_Odev6.Models.Entity
@using Web_Odev6.ActiveFolder
@model Web_Odev6.Models.Entity.doktor_table
@{
    ViewBag.Title = "DoktorPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eU8C12/EzC6vSZ2fOy2F6zc2u8oqyJSBf8WISe/zgPnG0n31mU6w0U9MgFbyLU5Pn" crossorigin="anonymous">
    <title>Bootstrap Example</title>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2>Doktor Bilgileri</h2>
                <dl class="row">
                    <dt class="col-sm-3">İsim:</dt>
                    <dd class="col-sm-9">@Model.isim</dd>

                    <dt class="col-sm-3">Soyisim:</dt>
                    <dd class="col-sm-9">@Model.soyisim</dd>

                    <dt class="col-sm-3">Bölüm:</dt>
                    <dd class="col-sm-9">@Model.bolum</dd>

                    <dt class="col-sm-3">Tecrübe:</dt>
                    <dd class="col-sm-9">@Model.tecrube</dd>

                    <dt class="col-sm-3">Seviye:</dt>
                    <dd class="col-sm-9">@Model.seviye</dd>

                    <dt class="col-sm-3">Kullanıcı Adı:</dt>
                    <dd class="col-sm-9">@Model.kullaniciadi</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h2>Doktor Panel</h2>
                @using (Web_OdevEntities3 db = new Web_OdevEntities3())
                {
                    <div class="container mt-4">
                        <h2>Randevu Listesi</h2>

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Hasta ID</th>
                                    <th>Hasta İsmi</th>
                                    <th>Hasta Soyismi</th>
                                    <th>Saat</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var randevu in db.randevu_table)
                                {
                                    <tr>
                                        <td>@randevu.id</td>
                                        <td>@randevu.hasta_id</td>
                                        <td>@randevu.hasta_table.isim</td>
                                        <td>@randevu.hasta_table.soyisim</td>
                                        <td>@randevu.saat</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container mt-5">
        @using (Html.BeginForm("HastaCagir", "doktor_table", FormMethod.Post))
        {
            <form class="hasta-form" id="form2" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Hasta id giriniz:</label>
                    <input type="text" class="form-control" name="id" id="id" placeholder="Hasta id giriniz:" required>
                </div>
                <button class="btn-success" type="submit">Hasta Çağır</button>
            </form>
        }

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofGJ+co2Mz9gVMDBIeWbQ/pzv+h9S7kN" crossorigin="anonymous"></script>
</body>
</html>


